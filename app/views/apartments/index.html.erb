


<br>

<div class="card text-center">

  <div class="card-header">
    Listado de Departamentos
    <p id="notice"><%= notice %></p>
  </div>
  <div class="card-body">
    <h1 class="card-title">Departamentos</h1>
    
    <table class="table table-bordered"><br>
      <thead>
        <tr>
          <th>Número</th>
          <th>Edificio</th>
          <th colspan="3">Opciones</th>
        </tr>
      </thead>

      <tbody>
        <% @apartments.each do |apartment| %>
          <tr>
            <td><%= apartment.numero %></td>
            <td><%= apartment.building_id %></td>
            <td><%= link_to 'Mostrar', apartment %></td>
            <td><%= link_to 'Editar', edit_apartment_path(apartment) %></td>
            <td><%= link_to 'Eliminar', apartment, method: :delete, data: { confirm: 'Estás seguro que deseas borrar el departamento?' } %></td>
          </tr>
        <% end %>
        
      </tbody>
    </table><br><br>
    <div class="float-end"><%= link_to 'Nuevo Departamento', new_apartment_path, class: 'btn btn-primary btn-sm'%></div><br>
    
    
  </div>
  <div class="card-footer text-muted">
    2 days ago
  </div>
</div>

<br>

<div class="card text-center">
  <div class="card-header">
    <br>
    <p id="notice"><%= notice %></p>
  </div>
  <div class="card-body">
    <h1 class="card-title">
      <%= @building.nombre %>
    </h1>
    
    <div class="card" style="width: 18rem;" >
      <div class="card-header">
        <strong>Departamentos N°:</strong>
      </div>
      <% @building.apartments.each do |apartments| %>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= apartments.numero%></li>
      </ul><% end %>
    </div>

    <table class="table table-bordered"><br>
      <thead>
        <p>
          <strong>Direccion:</strong>
          <%= @building.direccion %>
        </p>
        <p>
          <strong>Ciudad:</strong>
          <%= @building.ciudad %>
        </p>              
      </thead>

    </table><br><br>
    <div class="float-end">
    <%= link_to 'Editar', edit_building_path(@building) %> |
    <%= link_to 'Atrás', buildings_path %>
    </div>
    <br>
    
    
  </div>
  <%= render "layouts/card_footer" %>
</div>


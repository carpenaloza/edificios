<br>

<div class="card text-center">

  <div class="card-header header_footer">
    <h1 class="card-title titulos">Edificios</h1>
  </div>
  <div class="card-body">
    <div class="float-end"><%= link_to "Nuevo Edificio", new_building_path, class: 'btn btn-primary btn-sm'%></div>
    <br>
    <p id="notice"><%= notice %></p>
    <table class="table table-bordered"><br>
      <thead>
        <tr>
          <th>N° Ref.</th>
          <th>Nombre</th>
          <th>Dirección</th>
          <th>Ciudad</th>
          <th colspan="3">Opciones</th>
        </tr>
      </thead>

      <tbody>
        <% @buildings.each do |building| %>
          <tr>
            <td><%= building.id %></td>
            <td><%= building.nombre %></td>
            <td><%= building.direccion %></td>
            <td><%= building.ciudad %></td>
            <td class="link_show_edit"><%= link_to building do %>
            <i class="bi bi-eye-fill"></i> Mostrar <% end %>
            </td>

            <td class="link_show_edit"><%= link_to edit_building_path(building) do %>
            <i class="bi bi-pencil-square"></i> Editar <% end %>
            </td>

            <td class= "link_delete">
            <%= link_to building, method: :delete, data: { confirm: 'Estás seguro que deseas borrar el edificio?' } do%>
            <i class="bi bi-trash-fill"></i> Eliminar<% end %>
            </td>

            
          </tr>
        <% end %>
        
      </tbody>
    </table><br><br>
    <div class="float-end"><%= link_to "Nuevo Edificio", new_building_path, class: 'btn btn-primary btn-sm'%></div><br>
    
    
  </div>
  <%= render "layouts/card_footer" %>
</div>

<br>

<div class="card text-center">

  <div class="card-header">
    Listado de Edificios
    <p id="notice"><%= notice %></p>
  </div>
  <div class="card-body">
    <h1 class="card-title">Edificios</h1>
    
    <table class="table table-bordered"><br>
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Dirección</th>
          <th>Ciudad</th>
          <th colspan="3">Opciones</th>
        </tr>
      </thead>

      <tbody>
        <% @buildings.each do |building| %>
          <tr>
            <td><%= building.nombre %></td>
            <td><%= building.direccion %></td>
            <td><%= building.ciudad %></td>
            <td><%= link_to 'Mostrar', building %></td>
            <td><%= link_to 'Editar', edit_building_path(building) %></td>
            <td><%= link_to 'Eliminar', building, method: :delete, data: { confirm: 'Estás seguro que deseas borrar el edificio?' } %></td>
          </tr>
        <% end %>
        
      </tbody>
    </table><br><br>
    <div class="float-end"><%= link_to "Nuevo Edificio", new_building_path, class: 'btn btn-primary btn-sm'%></div><br>
    
    
  </div>
  <%= render "layouts/card_footer" %>
</div>
